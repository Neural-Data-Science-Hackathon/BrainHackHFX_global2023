/* Global Styles */

html,
body {
    width: 100%;
    height: 100%;
}

body {
    font-family: "Source Sans Pro","Helvetica Neue",Helvetica,Arial,sans-serif;
}

.text-color-blue {
	color:{{color_theme.primary}};
}
.text-color-blue a {
	color:{{color_theme.primary}};
}

/* Custom Button Styles */

.btn-dark {
    border-radius: 4;
    color: {{color_theme.font}};
    background-color: {{color_theme.primary}};
}

.btn-dark:hover,
.btn-dark:focus,
.btn-dark:active {
    color: {{color_theme.font}};
    background-color: {{color_theme.primary_hover}};
}

.btn-light {
    border-radius: 0;
    color: #333;
    background-color: rgb(255,255,255);
}

.btn-light:hover,
.btn-light:focus,
.btn-light:active {
    color: #333;
    background-color: rgba(255,255,255,0.8);
}

/* Custom Horizontal Rule */

hr.small {
    max-width: 100px;
}

/* Header */

.header {
    display: table;
    position: relative;
    width: 100%;
    height: 100%;
    box-shadow: inset 0 0 0 1000px rgba(0,0,0,.4);
    background: url({{background_img}}) no-repeat center center scroll;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
    -o-background-size: cover;
}

.text-vertical-center {
    display: table-cell;
    text-align: center;
    vertical-align: middle;
    color: {{color_theme.font}};
    font-family: 'Comfortaa', cursive;
}

.text-vertical-center h1 {
    margin: 0;
    padding: 0;
    font-size: 4.5em;
    font-weight: 700;
}

/* About */

.about {
    padding: 50px 0;
}

/* Sponsors */
#sponsors {
    /*padding: 50px 0;*/
	font-family: 'Comfortaa', cursive;
}

/* Services */

.details {
    padding: 20px 0;
	font-family: 'Comfortaa', cursive;
}

/* Services */

.services {
    padding: 50px 0;
	font-family: 'Comfortaa', cursive;
}

.services a {
    color: {{color_theme.font}};
}

.services a:focus, .services a:hover {
    color: {{color_theme.font}};
    text-decoration: underline;
}

.service-item {
    margin-bottom: 30px;
}

/* Callout */

.callout {
    display: table;
    width: 100%;
    height: 400px;
    color: {{color_theme.font}};
    background: url(../img/callout.jpg) no-repeat center center scroll;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
    -o-background-size: cover;
}


.location {
    display: table;
    width: 100%;
    padding: 20px 20px;
    /* height: 100px; */
    color: #000;
    font-family: 'Comfortaa', cursive;
    background: url({{location_logo}}) no-repeat center center scroll;
    -webkit-background-size: auto;
    -moz-background-size: auto;
    background-size: auto;
    -o-background-size: auto;
}

.text-dark {
	color: {{color_theme.font}};
}

.text-dark a {
	color: {{color_theme.font}};
}

.text-dark a:focus, .text-dark a:hover {
    color: {{color_theme.font}};
    text-decoration: underline;
}

.workspace {
    display: table;
    width: 100%;
    height: 400px;
    color: {{color_theme.font}};
    font-family: 'Comfortaa', cursive;
    box-shadow: inset 0 0 0 1000px rgba(0,0,0,.4);
    background: url({{schedule_background_img}}) no-repeat center center scroll;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
    -o-background-size: cover;
}

.hotel {
    display: table;
    width: 100%;
    height: 400px;
    color: {{color_theme.font}};
    font-family: 'Comfortaa', cursive;
    background: url(../img/hotel.png) no-repeat center center scroll;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
    -o-background-size: cover;
}

/* Portfolio */

.portfolio {
    padding: 50px 0;
}

.portfolio-item {
    margin-bottom: 30px;
}

.img-portfolio {
    margin: 0 auto;
}

.img-portfolio:hover {
    opacity: 0.8;
}

/* Call to Action */

.call-to-action {
    padding: 50px 0;
}

.call-to-action .btn {
    margin: 10px;
}

/* Map */

.map {
    height: 500px;
}

.map iframe{
    pointer-events: none;
}

@media(max-width:768px) {
    .map {
        height: 75%;
    }
}

/* Footer */

footer {
    padding: 100px 0;
}

/* Link */

a {
    color: {{color_theme.primary}};
}

a:focus, a:hover {
    color: {{color_theme.primary}};
    text-decoration: underline;
}



